@model AddSubjectClassVM

<form method="post" asp-action="AddSubject">
    <input asp-for="Class.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Subject</h2>
            <hr />
        </div>
        <div class="mb-3 col-6">
            <div class="form-group">
                <label asp-for="Subjects" class="control-label"></label>
                <select asp-for="Subjects" class="form-control" asp-items="@Model.SubjectList"></select>
                <span asp-validation-for="Subjects" class="text-danger"></span>
            </div>
                </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Classes" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>