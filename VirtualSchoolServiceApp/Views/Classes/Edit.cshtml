@model Class

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Class</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="SupervisorId"></label>
            <select asp-for="SupervisorId" asp-items="ViewBag.Supervisors" class="form-select">
                <option disabled selected>--Select Supervisor--</option>
            </select>
            <span asp-validation-for="SupervisorId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Students"></label>
            <div class="text-end">
                <a asp-controller="Classes" asp-action="AddStudent" asp-route-id="@Model.Id" class="btn btn-danger mx-2"> <i class="bi bi-plus-circle"></i> &nbsp; Add Student</a>
            </div>
            <table  id="tblData"  class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="mb-3">
            <label >Subjects</label>
            <div class="text-end">
                <a asp-controller="Classes" asp-action="AddSubject" asp-route-id="@Model.Id" class="btn btn-danger mx-2"> <i class="bi bi-plus-circle"></i> &nbsp; Add Subject</a>
            </div>
            <table  id="tblDataSubjects"  class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Classes" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    <script src="~/js/classStudents.js"></script>
}
