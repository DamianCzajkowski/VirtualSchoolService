@model IEnumerable<Grade>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Grades List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Grade" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Grade
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Subject Name
                </th>
                <th>
                    Student Name
                </th>
                <th>
                    Teacher Name
                </th>
                <th>
                    Datetime
                </th>
                <th>
                    Mark
                </th>
                <th>
                  
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Subject.Name
                    </td>
                    <td width="20%">
                        @obj.Student.User
                    </td>
                    <td width="20%">
                        @obj.Subject.Teacher.User
                    </td>
                    <td width="10%">
                        @obj.DateTime
                    </td>
                    <td width="10%">
                        @obj.Mark
                    </td>
                    <td width="20%">
                        <div class="w-15 btn-group" role="group">
                            <a asp-controller="Grade" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                        <div class="w-15 btn-group" role="group">
                            <a asp-controller="Grade" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>