@model dynamic
@{
    ViewData["Title"] = "Home Page";
}

@if (this.User.IsInRole("Parent"))
{
    <div>
        <h2 class="text-primary">Annoucements</h2>
    </div>
    <div class="text-center">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        Datetime
                    </th>
                    <th>
                        Teacher
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.Annoucements)
                {
                    <tr>
                        <td width="20%">
                            @obj.Title
                        </td>
                        <td width="50%">
                            @obj.Content
                        </td>
                        <td width="10%">
                            @obj.DateTime
                        </td>
                        <td width="20%">
                            @obj.Teacher.User
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
@if (this.User.IsInRole("Student"))
{
        <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Grades List</h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Subject Name
                </th>
                <th>
                    Marks
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Grades)
            {
                <tr>
                    <td width="50%">
                        @obj.Subject.Name
                    </td>
                    <td width="50%">
                        @foreach (var grade in obj.Grades)
                        {
                            <span>@grade.Mark, </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

}