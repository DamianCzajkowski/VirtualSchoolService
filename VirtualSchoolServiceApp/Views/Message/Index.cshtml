@model IEnumerable<Message>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Message List</h2>
        </div>
        @if (this.User.IsInRole("Parent"))
        {
            <div class="col-6 text-end">
                <a asp-controller="Message" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Message
                </a>
            </div>
        }
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Datetime
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="80%">
                        @obj.Title
                    </td>
                    <td width="80%">
                        @obj.Timestamp
                    </td>
                    <td>
                        <div class="w-15 btn-group" role="group">
                            <a asp-controller="Message" asp-action="Detail" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>