@model MessageThreadVM

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Send Response</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Context"></label>
            <input asp-for="Context" class="form-control" />
            <span asp-validation-for="Context" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Send</button>
        <a asp-controller="Message" asp-action="Detail" asp-route-id="@ViewBag.MessageId"  class="btn btn-secondary" style="width:150px">
            Back to message
        </a>
    </div>
</form>