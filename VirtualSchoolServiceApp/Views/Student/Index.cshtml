@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Students List</h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Class name
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.User.FirstName
                    </td>
                    <td width="30%">
                        @obj.User.LastName
                    </td>
                    <td width="30%">
                        @obj.Class.Name
                    </td>
                    <td>
                        <div class="w-15 btn-group" role="group">
                            <a asp-controller="Student" asp-action="StudentGrades" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> See degrees</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>