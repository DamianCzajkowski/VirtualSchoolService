@model IEnumerable<Subject>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Subject List</h2>
        </div>
        @if (this.User.IsInRole("Administrator"))
        {
            <div class="col-6 text-end">
                <a asp-controller="Subject" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Subject
                </a>
            </div>
        }
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Subject Name
                </th>
                <th>
                    Teacher
                </th>
                <th>
                    Content of Education
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.Teacher.User
                    </td>
                    <td width="20%">
                        <a href="@obj.ContentOfEducation">Content of Education</a>
                    </td>
                    <td width="40%">
                        <div class="w-15 btn-group" role="group">
                            <a asp-controller="Subject" asp-action="SubjectGrades" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> See degrees</a>
                        </div>
                        @if (this.User.IsInRole("Administrator") || this.User.IsInRole("Teacher"))
                        {
                            <div class="w-15 btn-group" role="group">
                                <a asp-controller="Subject" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            </div>
                        }
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <div class="w-15 btn-group" role="group">
                                <a asp-controller="Subject" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>